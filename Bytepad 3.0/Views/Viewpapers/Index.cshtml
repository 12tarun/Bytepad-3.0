<div style="width:50%">
    @foreach (var session in ViewBag.newList)
    {
        <br />
        <div data-toggle="collapse" href="#@session.SessionId" role="button" aria-expanded="false" aria-controls="@session.SessionId">
            <b style="font-size:15px">   @session.SessionName</b> (@session.Count papers)
        </div>
        <button style="float:right;text-decoration:none" class="btn">@Html.ActionLink("Remove Session", "removePapersBySessionId", new { sessionId = session.SessionId })</button>
        <div class="collapse" id="@session.SessionId">
            @foreach (var examType in session.examTypes)
            {
                <br />
                string id = @session.SessionId.ToString() + @examType.ExamTypeId.ToString();

                <div data-toggle="collapse" href="#@id" role="button" aria-expanded="false" aria-controls="@id">
                    @examType.ExamTypeName (@examType.Count papers )
                </div>
                <button class="btn" style="float:right;text-decoration:none">@Html.ActionLink("Remove Exam Type", "removePapersByExamTypeAndSession", new { sessionId = session.SessionId, examTypeId = examType.ExamTypeId })</button>
                <div class="collapse" id="@id">
                    @foreach (var paper in examType.Papers)
                    {
                        <div>
                            @paper.FileUrl
                        </div>
                        <button class="btn" style="float:right">@Html.ActionLink("Remove", "removePaper", new { id = paper.Id }) </button>
                    }
                </div>


            }
        </div>

    }
</div>
